<%- include header %>

<%- include nav %>
<!--绿色小导航-->
<div id="ulMenu">
  <div id="yixiang"><a href="/">意想社团</a></div>
  <ul class="ulMenu">
    <li> <a href="/organizations"><i class="glyphicon glyphicon-flag"></i> <span> 加入社团 </span> </a> </li>
    <li> <a href="/activitys"><i class="glyphicon glyphicon-globe"></i> <span> 参与活动 </span> </a> </li>
    <li> <a href="/diarys"><i class="glyphicon glyphicon-th-list"></i> <span> 记录成长 </span> </a> </li>
  </ul>
</div>
<!--最新活动-->
<div id="qipao">
  <div class="rectangle">最新活动</div>
  <div class="triangle" style="margin:0 auto 0 30px;"></div>
</div>
<div id="lunbo" class="container" ng-controller="indexlunbo">
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="{{$index}}" ng-repeat="lunbo in lunbo"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox" id="imgs">
    <div ng-repeat="lunbo in lunbo" class="item {{$index=='0'?'active':''}}">
      <a ng-href="/activity/{{lunbo.act_id}}"><img ng-src="{{lunbo.act_poster}}" alt="{{lunbo.act_name}}"></a>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

<!-- 社团日记模块 -->
<div id="qipao">
  <div class="rectangle">社团日记</div>
  <div class="triangle" style="margin:0 auto;"></div>
</div>
<div id="diary" ng-controller="indexDiary">
  <div class="col-md-12 column">
    <div class="row clearfix">
      <div class="col-sm-4 column" ng-repeat="diary in Diary">
      	<div class="diary-box">
            <h4 class="diary-title"><a ng-href="/diary/{{diary.dia_id}}"><span ng-bind="diary.dia_title"></span> </a></h4>
            <p class="diary-content">{{diary.dia_content.substring(1,60) }}</p>
            <div class="diary-info">
              <span class="diary-about">关于：<span ng-bind="diary.dia_about"></span> </span>
              <span class="diary-author">作者：<a ng-href="/userdetail/{{diary.par_user_id}}"><span ng-bind="diary.dia_author"></span></a></span>
              <span class="diary-time"><span ng-bind="diary.dia_time"></span> </span>
            </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 活跃社团模块 -->
<div id="qipao">
  <div class="rectangle">活跃社团</div>
  <div class="triangle" style="margin:0 30px 0 auto; "></div>
</div>
<div id="activedas"  ng-controller="indexhotOrganization">
  <div class="col-md-12 column">
    <div class="row">
      <!-- 循环活跃社团 -->
      <div class="col-sm-4" ng-repeat="organization in Organization">
        <div class="thumbnail"><a ng-href="/organization/{{organization.org_id}}"><img ng-src="{{organization.org_icon}}"/></a>
          <div class="caption">
            <h3><a ng-href="/organization/{{organization.org_id}}"><span ng-bind="organization.org_name"></span></a></h3>
           <span>协会人数：<span ng-bind="organization.org_numper"></span>人</span>&nbsp;&nbsp;&nbsp;&nbsp;<span>
           <!-- 活动：<span ng-bind="organization.org_numact"></span> -->
           </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include footer %>
<!-- 导航条当前选项选中 -->
<script>$("#nav1").addClass("actived");</script>
</body>
</html>